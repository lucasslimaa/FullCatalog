@model ErrorViewModel
@{
    ViewData["Title"] = "An error has occured";
}

@{
    if (Model == null)
    {
        <div>
            <h2>Ooops! An error has occured, but dont worry. we are working to fix it!</h2>
        </div>
    }
    else
    {
        <h1>@Html.Raw(Model.Title)</h1>
        <h2 class="text-danger">@Html.Raw(Model.Message)</h2>
    }
}
